{
  "name": "vegabch",
  "description": "BCH defi trading tool",
  "version": "0.1.3-beta.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "author": "Hossein Zoda",
  "homepage": "https://github.com/hosseinzoda/vegabch",
  "repository": "hosseinzoda/vegabch",
  "bugs": "https://github.com/hosseinzoda/vegabch/issues",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "oclif": {
    "bin": "vegabch",
    "dirname": "vegabch",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "scripts": {
    "clean:build": "shx rm -rf dist",
    "build": "tsc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest",
    "test": "mocha --forbid-only \"test/**/*.test.ts\""
  },
  "bin": {
    "vegabch": "./bin/run.js"
  },
  "dependencies": {
    "@cashlab/cauldron": "^1.0.0",
    "@cashlab/common": "^1.0.4",
    "@cashlab/moria": "^1.1.1",
    "@electrum-cash/network": "^4.1.1",
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "nodemailer": "^6.10.0"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.112",
    "@types/nodemailer": "^6.4.17",
    "chai": "^4",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "@cashlab/common": "$@cashlab/common"
  }
}
